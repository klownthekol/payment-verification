{
  "version": 2,
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.ts" }
  ],
  "env": {
    "NODE_OPTIONS": "--require ./api/ignore-css.js"
  },
  "buildCommand": "chmod +x node_modules/.bin/tsc && tsc",
  "outputDirectory": "api"
}
