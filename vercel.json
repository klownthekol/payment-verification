{
  "version": 2,
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.0.0",
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.ts" }
  ],
  "outputDirectory": "api",
  "env": {
    "NODE_OPTIONS": "--require ./api/ignore-css.js"
  }
}
