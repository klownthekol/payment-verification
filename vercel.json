{
  "version": 2,
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18.x",
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--require ./ignore-css.js"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.ts" }
  ]
}
