{
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18.x",
      "memory": 1024,
      "maxDuration": 10,
      "excludeFiles": [
        "node_modules/@devfunlabs/web-sdk/styles.css",
        "node_modules/@devfunlabs/web-sdk/**/*.css",
        "node_modules/@devfunlabs/web-sdk/**/*.scss",
        "node_modules/@devfunlabs/web-sdk/**/*.less"
      ]
    }
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  }
}
